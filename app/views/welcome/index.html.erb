<h1>Welcome</h1>
<br>
<%= form_with url: root_path, method: :get, data: {turbo: false} do |form| %>
  <%= form.text_field :search, class: 'search_field', placeholder: 'Search for Merchants' %>
  <%= form.submit "Search" %>
<% end %>
<br>
<br>
<% if @merchants %>
  <ul style="list-style-type:none;">
    <% @merchants.each do |merchant| %>
      <li><%=link_to merchant.name, merchant_path(merchant.id) %></li>
    <% end %>
  </ul>
<% end %>